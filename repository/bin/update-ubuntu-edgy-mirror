  ln -s /var/mirror/installer-i386/ /var/mirror/ubuntu/dists/edgy/main/installer-i386
fi

if [ ! -L /var/mirror/ubuntu/indices ]; then
  ln -s /var/mirror/indices /var/mirror/ubuntu/indices
fi
