#!/bin/sh

PREREQ=""
DESCRIPTION="Fixing dbus bug in GNOME..."

. /scripts/casper-functions

prereqs()
{
       echo "$PREREQ"
}

case $1 in
# get pre-requisites
prereqs)
       prereqs
       exit 0
       ;;
esac

log_begin_msg "$DESCRIPTION"

# Cleaning up the english stuff at the user's home

sed -i 's|num_client=7|num_client=8|g' /root/usr/share/gnome/default.session.gv4


cat <<EOF >> /root/usr/share/gnome/default.session.gv4
8,Priority=35
8,Program=/etc/init.d/dbus restart

EOF


log_end_msg
